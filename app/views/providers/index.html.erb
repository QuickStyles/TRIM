<% @services.each do |service| %>
  <div class="col-md-4">
    <div class="panel panel-info service-panel" data-href="<% link_to service_path(service) %>">
      <div class="panel-heading">
        <%= link_to "#{service.name}", service_path(service) %>
        <br>
        $<%= service.rate %>
      </div>
      <div class="panel-body">
        <p>
          <%#= service.description %>
          Service Description Goes Here
          Add service created at date
          add weekly figures
        </p>
      </div>
      <table class="table table-striped table-bordered ">
        <tr>
          <td>
            Past Bookings
          </td>
          <td>
            Future Bookings
          </td>
          <td>
            Today's bookings
          </td>
        </tr>
        <tr>
          <td>
            <%= service.bookings.where('time_end < ?', Time.now).count %>
          </td>
          <td>
            <%= service.bookings.where('time_end > ?', Time.now).count %>
          </td>
          <td>
            <%= service.bookings.where(time_end: Time.now.beginning_of_day..Time.now.end_of_day).count %>
          </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>
<script>
$(document).on('turbolinks:load',function(){
  $("div .service-panel[data-href]").click(function(){
    var link = $(this).data('href')
    $.ajax({
      url: link,
      type: "GET"
    });
  });
});
</script>
